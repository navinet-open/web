---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header/Header.astro";
import Footer from "../components/Footer.astro";
import Stats from "../components/Header/Stats.astro";
import Aside from "../components/Aside/Aside.astro";
import AsideStatic from "../components/Aside/AsideStatic.astro";

const { content } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={content.title} description={content.description} />
    <style is:inline>
      div.row {
        margin-top: 1rem;
      }
      section.col {
        text-shadow: var(--color-text-shadow);
      }
      section.col h1 {
        border-bottom: var(--color-border-subtle);
        padding-bottom: 0.2rem;
        margin-bottom: 0.5rem;
      }
    </style>
  </head>
  <body>
    <div class="main-container">
      <Stats />
      <Header />
      <div class="row">
        <section class="col content">
          <slot />
        </section>
        <Aside>
          <AsideStatic />
          <Aside />
        </Aside>
      </div>
      <Footer />
    </div>
  </body>
</html>
