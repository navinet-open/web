---
const posts = (await Astro.glob("../../pages/news/*.mdx")).sort(
  (a, b) =>
    new Date(b.frontmatter.pubDate).valueOf() -
    new Date(a.frontmatter.pubDate).valueOf()
);
---

<div class="sidebar-mobile">
  <aside class="col sidebar">
    <section class="pod">
      <p class="title-bar">News</p>
      <section class="inner-pod">
        <ul class="ul-list">
          {
            posts.map((post) => (
              <li>
                <a href={post.url}>{post.frontmatter.title}</a>
              </li>
            ))
          }
        </ul>
      </section>
    </section>
  </aside>
</div>

<style>
  aside.sidebar {
    display: flex;
    flex-direction: column;
    width: 250px;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  @media (max-width: 700px) {
    div.sidebar-mobile {
      width: 100%;
      display: flex;
      justify-content: center;
    }
    aside.sidebar {
      display: grid;
      grid-template-columns: 1fr 1fr;
      width: 100%;
    }
  }
</style>
